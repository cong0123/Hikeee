<!-- res/layout/activity_edit_observation.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EditObservationActivity">

    <EditText
        android:id="@+id/editContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nội dung"/>

    <EditText
        android:id="@+id/editTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:focusable="false"
        android:hint="Thời gian"/>
    <EditText
        android:id="@+id/editWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thời tiết"/>
    <EditText
        android:id="@+id/editTrailCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Điều kiện đường mòn"/>

    <!-- Thêm các trường nhập liệu khác cần thiết -->

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu"/>

</LinearLayout>
